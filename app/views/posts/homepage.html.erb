<%= title "Homepage Blogger" %>
<div class="row">
  <div class="col-xs-8">
    <% @posts.each do |post| %>
      <h2><%= post.title %></h2>
      <h3><%= post.subject %></h3>
      <p><%= postText(post.text) %></p>
      <strong>Autor: <%= post.author.name %></strong>
      <hr>
    <% end %>
  </div>
  <div class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Categorias</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% Category.all.each do |category| %>
            <li>
              <%= link_to category.description, homepage_posts_path(category_id: category.id) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Localizar</h3>
      </div>
      <div class="panel-body">
        <%= form_tag("/posts/homepage", method: "post") do %>
          <%= text_field_tag(:search_term) %>
          <%= submit_tag("Buscar") %>
        <% end %>
      </div>
    </div>
  </div>
</div>
