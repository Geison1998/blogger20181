<p id="notice"><%= notice %></p>

<h1>Postagens</h1>

<table>
  <thead>
    <tr>
      <th>Autor</th>
      <th>Texto</th>
      <th>Assunto</th>
      <th>Titulo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.author.name %></td>
        <td><%= post.text %></td>
        <td><%= post.subject %></td>
        <td><%= post.title %></td>
        <td><%= link_to 'Mostrar', post %></td>
        <td><%= link_to 'Editar', edit_post_path(post) %></td>
        <td><%= link_to 'Deletar', post, method: :delete, data: { confirm: 'Tem Certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Postagem', new_post_path %>
